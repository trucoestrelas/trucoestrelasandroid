<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView

        android:background="@drawable/bg_reward"
        android:id="@+id/iv_reward"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:src="@drawable/img_badge_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Torneio #4 CampeÃ£o"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_reward" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_reward_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20/07/2004"
        android:textSize="12sp"
        android:alpha="0.7"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reward_name" />

</androidx.constraintlayout.widget.ConstraintLayout>